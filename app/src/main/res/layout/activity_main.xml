<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="Cosumo de Json Web Service"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAcceder"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContrasena"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="13dp"
        android:onClick="btnAcceder_Onclick"
        android:text="ACCEDER" />

    <EditText
        android:id="@+id/txtContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUsuario"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="173dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Nombre de usuario"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="A utilizar:" />

    <RadioGroup
        android:layout_width="111dp"
        android:layout_height="77dp"
        android:layout_below="@+id/divider3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="46dp">

        <RadioButton
            android:id="@+id/rbRetrofit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrofit" />

        <RadioButton
            android:id="@+id/rbVolley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volley" />
    </RadioGroup>

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="50dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider2"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_below="@+id/divider3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="182dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider3"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>